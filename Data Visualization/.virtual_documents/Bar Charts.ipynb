import matplotlib.pyplot as plt


years = [1990, 1992, 1994, 1996, 1998, 2000, 2003, 2005, 2007, 2010]
runs = [500, 700, 1100, 1500, 1800, 1200, 1700, 1300, 900, 1500]
plt.bar(years,runs)
plt.title("Sachin runs")
plt.xlabel("Years")
plt.ylabel("runs")
plt.tight_layout()



import numpy as np
sachin = [500, 700, 1100, 1500, 1800, 1200, 1700, 1300, 900, 1500]
sehwag = [0, 200, 900, 1400, 1600, 1800, 1500, 1100, 800, 0]
kohli = [0, 0, 500, 800, 1100, 1300, 1500, 1800, 1900, 2100]
x = np.arrange(len(years))
width = 0.25

plt.bar(x-width,sachin,years,label = "sachin")
plt.bar(x,sehwag,years,label = "sehwag")
plt.bar(x+width,kohli,years,label = "kohli")





